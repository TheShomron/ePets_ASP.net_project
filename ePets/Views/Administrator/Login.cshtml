@using ePets.Data.ViewComponents;
@model LoginVM;

@{
    ViewData["Title"]= "Log In";
}


<h1>Log In:</h1>

<div class="AnimalBox" style="text-align:center">


    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <span><b>Sorry!</b>- @TempData["Error"] </span>
        </div>
    }

    <div >
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>

            <div>
                <label asp-for="EmailAdress"></label>
                <input asp-for="EmailAdress" />
                <span asp-validation-for="EmailAdress"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div>
                <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Catalog" > Cancel</a>
                <input class="btn btn-outline-successs" type="submit" value="Log In"  />
            </div>
        </form>
    </div>
</div>